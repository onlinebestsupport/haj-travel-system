<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Haj Journey - Traveler Portal</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/traveler/style.css">
    <link rel="stylesheet" href="https://cdnjsflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="traveler-nav">
        <div class="container nav-container">
            <div class="nav-brand">
                <i class="fas fa-kaaba"></i>
                <div>
                    <h2>My Haj Journey</h2>
                    <p id="travelerNameDisplay">Loading...</p>
                </div>
            </div>
            <button onclick="logout()" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </div>
    </div>

    <main class="container main-content">
        <!-- Loading State -->
        <div id="loading" class="loading-container">
            <div class="spinner"></div>
            <p class="loading-text">Loading your Haj journey details...</p>
        </div>

        <!-- Error State -->
        <div id="error" class="error-container" style="display: none;">
            <i class="fas fa-exclamation-circle"></i>
            <h2>Oops! Something went wrong</h2>
            <p>We couldn't load your details. Please try again.</p>
            <button onclick="loadTravelerData()" class="retry-btn">
                <i class="fas fa-sync-alt"></i> Retry
            </button>
        </div>

        <!-- Traveler Dashboard Content -->
        <div id="dashboardContent" style="display: none;">
            <!-- Welcome Card -->
            <div class="welcome-card">
                <h2><i class="fas fa-hand-peace"></i> Welcome, <span id="travelerFullName"></span>!</h2>
                <p>Your spiritual journey is our priority. Here's your Haj/Umrah details.</p>
            </div>

            <!-- Batch Information -->
            <div class="info-card" style="background: linear-gradient(135deg, #3498db, #2980b9); color: white; margin-bottom: 30px;">
                <h3 style="color: white; border-bottom-color: rgba(255,255,255,0.2);"><i class="fas fa-layer-group"></i> Your Package Details</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
                    <div>
                        <p style="opacity: 0.9; margin-bottom: 5px;">Package Name</p>
                        <h4 style="color: white; margin: 0; font-size: 1.2rem;" id="batchName">-</h4>
                    </div>
                    <div>
                        <p style="opacity: 0.9; margin-bottom: 5px;">Departure Date</p>
                        <h4 style="color: white; margin: 0;" id="departureDate">-</h4>
                    </div>
                    <div>
                        <p style="opacity: 0.9; margin-bottom: 5px;">Return Date</p>
                        <h4 style="color: white; margin: 0;" id="returnDate">-</h4>
                    </div>
                    <div>
                        <p style="opacity: 0.9; margin-bottom: 5px;">Status</p>
                        <h4 style="color: white; margin: 0;" id="batchStatus">-</h4>
                    </div>
                </div>
            </div>

            <!-- Personal Information Grid -->
            <div class="info-grid">
                <!-- Personal Details -->
                <div class="info-card">
                    <h3><i class="fas fa-user"></i> Personal Information</h3>
                    <div class="info-row">
                        <span class="info-label">Full Name</span>
                        <span class="info-value" id="fullName">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Passport Number</span>
                        <span class="info-value" id="passportNo">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Gender</span>
                        <span class="info-value" id="gender">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date of Birth</span>
                        <span class="info-value" id="dob">-</span>
                    </div>
                </div>

                <!-- Contact Details -->
                <div class="info-card">
                    <h3><i class="fas fa-address-book"></i> Contact Information</h3>
                    <div class="info-row">
                        <span class="info-label">Mobile</span>
                        <span class="info-value" id="mobile">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Email</span>
                        <span class="info-value" id="email">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Aadhaar</span>
                        <span class="info-value" id="aadhaar">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">PAN</span>
                        <span class="info-value" id="pan">-</span>
                    </div>
                </div>

                <!-- Health Information -->
                <div class="info-card">
                    <h3><i class="fas fa-heartbeat"></i> Health Information</h3>
                    <div class="info-row">
                        <span class="info-label">Vaccine Status</span>
                        <span class="info-value" id="vaccineStatus">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Wheelchair</span>
                        <span class="info-value" id="wheelchair">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Blood Group</span>
                        <span class="info-value" id="bloodGroup">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Allergies</span>
                        <span class="info-value" id="allergies">-</span>
                    </div>
                </div>
            </div>

            <!-- Family Details -->
            <div class="info-grid">
                <div class="info-card">
                    <h3><i class="fas fa-users"></i> Family Details</h3>
                    <div class="info-row">
                        <span class="info-label">Father's Name</span>
                        <span class="info-value" id="fatherName">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Mother's Name</span>
                        <span class="info-value" id="motherName">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Spouse's Name</span>
                        <span class="info-value" id="spouseName">-</span>
                    </div>
                </div>

                <!-- Address -->
                <div class="info-card">
                    <h3><i class="fas fa-map-marker-alt"></i> Address</h3>
                    <div class="info-row">
                        <span class="info-label">Place of Birth</span>
                        <span class="info-value" id="placeOfBirth">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Place of Issue</span>
                        <span class="info-value" id="placeOfIssue">-</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Address</span>
                        <span class="info-value" id="address">-</span>
                    </div>
                </div>
            </div>

            <!-- Documents -->
            <div class="info-card">
                <h3><i class="fas fa-file-alt"></i> Documents</h3>
                <div class="document-grid">
                    <div class="document-item" id="passportDoc">
                        <i class="fas fa-passport"></i>
                        <span>Passport</span>
                        <small id="passportStatus">Not uploaded</small>
                    </div>
                    <div class="document-item" id="aadhaarDoc">
                        <i class="fas fa-id-card"></i>
                        <span>Aadhaar</span>
                        <small id="aadhaarStatus">Not uploaded</small>
                    </div>
                    <div class="document-item" id="panDoc">
                        <i class="fas fa-file-invoice"></i>
                        <span>PAN Card</span>
                        <small id="panStatus">Not uploaded</small>
                    </div>
                    <div class="document-item" id="vaccineDoc">
                        <i class="fas fa-syringe"></i>
                        <span>Vaccine</span>
                        <small id="vaccineStatus">Not uploaded</small>
                    </div>
                </div>
            </div>

            <!-- Payment Schedule -->
            <div class="info-card">
                <h3><i class="fas fa-credit-card"></i> Payment Schedule</h3>
                <div class="payment-table-container">
                    <table class="payment-table">
                        <thead>
                            <tr>
                                <th>Amount</th>
                                <th>Payment Date</th>
                                <th>Method</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="paymentTableBody">
                            <tr>
                                <td colspan="4" style="text-align: center; padding: 30px;">
                                    <i class="fas fa-info-circle"></i> Loading payment schedule...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Emergency Contact -->
            <div class="emergency-contact">
                <h4><i class="fas fa-phone-alt"></i> Emergency Contact</h4>
                <p><strong>Contact Person:</strong> <span id="emergencyContact">-</span></p>
                <p><strong>Phone:</strong> <span id="emergencyPhone">-</span></p>
            </div>

            <!-- Print Button -->
            <div style="text-align: right; margin-top: 30px;">
                <button onclick="printDashboard()" class="print-btn">
                    <i class="fas fa-print"></i> Print My Details
                </button>
            </div>
        </div>
    </main>

    <script>
        // ==================== GLOBAL VARIABLES ====================
        const travelerId = sessionStorage.getItem('travelerId');
        const travelerPassport = sessionStorage.getItem('travelerPassport');
        const travelerName = sessionStorage.getItem('travelerName');

        // ==================== INITIALIZATION ====================
        document.addEventListener('DOMContentLoaded', function() {
            // Check if traveler is logged in
            if (!travelerId || !travelerPassport) {
                window.location.href = '/traveler_login.html';
                return;
            }

            // Display traveler name
            if (travelerName) {
                document.getElementById('travelerNameDisplay').textContent = travelerName;
            }

            // Load traveler data
            loadTravelerData();
        });

        // ==================== LOAD TRAVELER DATA ====================
        async function loadTravelerData() {
            try {
                // Show loading, hide error and content
                document.getElementById('loading').style.display = 'flex';
                document.getElementById('error').style.display = 'none';
                document.getElementById('dashboardContent').style.display = 'none';

                const response = await fetch(`/api/travelers/passport/${travelerPassport}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    const t = data.traveler;
                    
                    // Hide loading, show dashboard
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('dashboardContent').style.display = 'block';
                    
                    // Update welcome
                    document.getElementById('travelerFullName').textContent = `${t.first_name || ''} ${t.last_name || ''}`.trim();
                    
                    // Personal Information
                    document.getElementById('fullName').textContent = `${t.first_name || ''} ${t.last_name || ''}`.trim() || '-';
                    document.getElementById('passportNo').textContent = t.passport_no || '-';
                    document.getElementById('gender').textContent = t.gender || '-';
                    document.getElementById('dob').textContent = t.dob || '-';
                    
                    // Contact Information
                    document.getElementById('mobile').textContent = t.mobile || '-';
                    document.getElementById('email').textContent = t.email || '-';
                    document.getElementById('aadhaar').textContent = t.aadhaar || '-';
                    document.getElementById('pan').textContent = t.pan || '-';
                    
                    // Health Information
                    document.getElementById('vaccineStatus').textContent = t.vaccine_status || 'Not Vaccinated';
                    document.getElementById('wheelchair').textContent = t.wheelchair || 'No';
                    
                    // Parse extra fields
                    let extraFields = {};
                    if (t.extra_fields) {
                        try {
                            extraFields = typeof t.extra_fields === 'string' ? 
                                JSON.parse(t.extra_fields) : t.extra_fields;
                        } catch (e) {
                            console.error('Error parsing extra fields:', e);
                        }
                    }
                    
                    document.getElementById('bloodGroup').textContent = extraFields.blood_group || '-';
                    document.getElementById('allergies').textContent = extraFields.allergies || '-';
                    document.getElementById('emergencyContact').textContent = extraFields.emergency_contact || '-';
                    document.getElementById('emergencyPhone').textContent = extraFields.emergency_phone || '-';
                    
                    // Family Information
                    document.getElementById('fatherName').textContent = t.father_name || '-';
                    document.getElementById('motherName').textContent = t.mother_name || '-';
                    document.getElementById('spouseName').textContent = t.spouse_name || '-';
                    
                    // Address
                    document.getElementById('placeOfBirth').textContent = t.place_of_birth || '-';
                    document.getElementById('placeOfIssue').textContent = t.place_of_issue || '-';
                    document.getElementById('address').textContent = t.passport_address || '-';
                    
                    // Document status
                    document.getElementById('passportStatus').textContent = t.passport_scan ? '✓ Uploaded' : '✗ Missing';
                    document.getElementById('aadhaarStatus').textContent = t.aadhaar_scan ? '✓ Uploaded' : '✗ Missing';
                    document.getElementById('panStatus').textContent = t.pan_scan ? '✓ Uploaded' : '✗ Missing';
                    
                    // Update document styling
                    updateDocumentStyle('passportDoc', t.passport_scan);
                    updateDocumentStyle('aadhaarDoc', t.aadhaar_scan);
                    updateDocumentStyle('panDoc', t.pan_scan);
                    updateDocumentStyle('vaccineDoc', t.vaccine_scan);
                    
                    // Batch info
                    document.getElementById('batchName').textContent = t.batch_name || 'Not Assigned';
                    document.getElementById('departureDate').textContent = t.departure_date || 'TBD';
                    document.getElementById('returnDate').textContent = t.return_date || 'TBD';
                    document.getElementById('batchStatus').textContent = t.batch_status || 'Open';
                    
                    // Load payment schedule
                    if (t.id) {
                        loadPaymentSchedule(t.id);
                    }
                } else {
                    showError();
                }
            } catch (error) {
                console.error('Error loading traveler data:', error);
                showError();
            }
        }

        // ==================== UPDATE DOCUMENT STYLE ====================
        function updateDocumentStyle(elementId, hasDocument) {
            const element = document.getElementById(elementId);
            if (element) {
                if (hasDocument) {
                    element.classList.add('document-uploaded');
                    element.classList.remove('document-missing');
                } else {
                    element.classList.add('document-missing');
                    element.classList.remove('document-uploaded');
                }
            }
        }

        // ==================== SHOW ERROR ====================
        function showError() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('error').style.display = 'block';
            document.getElementById('dashboardContent').style.display = 'none';
        }

        // ==================== LOAD PAYMENT SCHEDULE ====================
        async function loadPaymentSchedule(travelerId) {
            try {
                const response = await fetch(`/api/payments/traveler/${travelerId}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success && data.payments && data.payments.length > 0) {
                    const tbody = document.getElementById('paymentTableBody');
                    tbody.innerHTML = data.payments.map(p => {
                        const statusClass = p.status === 'completed' ? 'payment-paid' : 'payment-pending';
                        const statusText = p.status === 'completed' ? 'Paid' : 'Pending';
                        return `
                        <tr>
                            <td class="payment-amount">₹${p.amount ? p.amount.toLocaleString('en-IN') : '0'}</td>
                            <td>${p.payment_date || '-'}</td>
                            <td>${p.payment_method || '-'}</td>
                            <td class="${statusClass}">${statusText}</td>
                        </tr>
                    `}).join('');
                } else {
                    document.getElementById('paymentTableBody').innerHTML = `
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 30px;">
                                <i class="fas fa-info-circle" style="color: #3498db;"></i>
                                No payment records found.
                            </td>
                        </tr>
                    `;
                }
            } catch (error) {
                console.error('Error loading payments:', error);
                document.getElementById('paymentTableBody').innerHTML = `
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 30px; color: #e74c3c;">
                            <i class="fas fa-exclamation-circle"></i>
                            Error loading payment schedule
                        </td>
                    </tr>
                `;
            }
        }

        // ==================== PRINT DASHBOARD ====================
        function printDashboard() {
            const content = document.getElementById('dashboardContent').innerHTML;
            const travelerName = document.getElementById('travelerFullName').textContent;
            const printWindow = window.open('', '_blank');
            
            printWindow.document.write(`
                <html>
                <head>
                    <title>My Haj Journey - ${travelerName}</title>
                    <style>
                        body { 
                            font-family: Arial, sans-serif; 
                            padding: 30px; 
                            max-width: 1200px;
                            margin: 0 auto;
                        }
                        h1 { 
                            color: #2c3e50; 
                            text-align: center;
                            border-bottom: 2px solid #27ae60;
                            padding-bottom: 20px;
                            margin-bottom: 30px;
                        }
                        h2 { 
                            color: #27ae60; 
                            margin-top: 30px;
                            border-bottom: 1px solid #ecf0f1;
                            padding-bottom: 10px;
                        }
                        .info-grid {
                            display: grid;
                            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                            gap: 20px;
                            margin-bottom: 30px;
                        }
                        .info-card {
                            border: 1px solid #ddd;
                            padding: 20px;
                            border-radius: 5px;
                            page-break-inside: avoid;
                        }
                        .info-card h3 {
                            color: #2c3e50;
                            margin-top: 0;
                            border-bottom: 1px solid #ecf0f1;
                            padding-bottom: 10px;
                        }
                        .info-row {
                            display: flex;
                            margin-bottom: 10px;
                            padding: 5px 0;
                        }
                        .info-label {
                            font-weight: bold;
                            width: 120px;
                            color: #7f8c8d;
                        }
                        .info-value {
                            flex: 1;
                        }
                        table {
                            width: 100%;
                            border-collapse: collapse;
                            margin: 20px 0;
                        }
                        th {
                            background: #2c3e50;
                            color: white;
                            padding: 10px;
                            text-align: left;
                        }
                        td {
                            padding: 10px;
                            border: 1px solid #ddd;
                        }
                        .footer {
                            text-align: center;
                            margin-top: 40px;
                            padding-top: 20px;
                            border-top: 1px solid #ecf0f1;
                            color: #7f8c8d;
                            font-size: 0.9rem;
                        }
                        @media print {
                            button { display: none; }
                            body { padding: 15px; }
                        }
                    </style>
                </head>
                <body>
                    <h1>My Haj Journey - Complete Details</h1>
                    <p><strong>Generated on:</strong> ${new Date().toLocaleString()}</p>
                    <p><strong>Traveler:</strong> ${travelerName}</p>
                    ${content}
                    <div class="footer">
                        <p>Alhudha Haj Travel System - Official Document</p>
                    </div>
                </body>
                </html>
            `);
            
            printWindow.document.close();
            
            // Wait for content to load then print
            setTimeout(() => {
                printWindow.print();
            }, 500);
        }

        // ==================== LOGOUT ====================
        function logout() {
            // Clear all session storage
            sessionStorage.removeItem('travelerId');
            sessionStorage.removeItem('travelerName');
            sessionStorage.removeItem('travelerPassport');
            
            // Redirect to login page
            window.location.href = '/traveler_login.html';
        }

        // ==================== HELPER FUNCTIONS ====================
        function formatDate(dateString) {
            if (!dateString) return '-';
            try {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-IN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            } catch (e) {
                return dateString;
            }
        }

        function formatCurrency(amount) {
            if (!amount) return '₹0';
            return '₹' + parseFloat(amount).toLocaleString('en-IN', {
                maximumFractionDigits: 0
            });
        }

        // ==================== AUTO REFRESH (every 5 minutes) ====================
        setInterval(() => {
            if (travelerId && travelerPassport) {
                console.log('Auto-refreshing traveler data...');
                loadTravelerData();
            }
        }, 300000); // 5 minutes
    </script>
</body>
</html>
