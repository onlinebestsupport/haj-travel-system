        // ==================== AUTHENTICATION ====================
        function checkAuth() {
            const isLoggedIn = sessionStorage.getItem('adminLoggedIn');
            
            if (!isLoggedIn) {
                window.location.href = '/admin.login.html';
                return;
            }
            
            const userName = sessionStorage.getItem('adminName') || 'Admin';
            const userRole = sessionStorage.getItem('adminRole') || 'Admin';
            
            const userNameEl = document.getElementById('userName');
            const userRoleEl = document.getElementById('userRole');
            const roleBadgeEl = document.getElementById('roleBadge');
            
            if (userNameEl) userNameEl.textContent = userName;
            if (userRoleEl) userRoleEl.textContent = userRole;
            if (roleBadgeEl) roleBadgeEl.textContent = userRole;
            
            currentUser = {
                name: userName,
                role: userRole
            };
        }

        // ==================== PERMISSIONS ====================
        function loadUserPermissions() {
            const userRole = sessionStorage.getItem('adminRole') || 'admin';
            
            // Super admin gets all permissions
            if (userRole === 'super_admin') {
                userPermissions = {
                    batches: true,
                    travelers: true,
                    payments: true,
                    invoices: true,
                    receipts: true,
                    backup: true,
                    whatsapp: true,
                    email: true,
                    frontpage: true,
                    reports: true,
                    users: true
                };
                
                // Show permissions tab for super admin
                const permTab = document.getElementById('tabPermissions');
                if (permTab) permTab.style.display = 'flex';
                
                // Load all modules
                loadModules();
                loadQuickActions();
                
                return;
            }
            
            // For other roles, load permissions from storage/database
            const rolePermissions = {
                admin: {
                    batches: true,
                    travelers: true,
                    payments: true,
                    invoices: true,
                    receipts: true,
                    backup: false,
                    whatsapp: true,
                    email: true,
                    frontpage: false,
                    reports: true,
                    users: false
                },
                manager: {
                    batches: true,
                    travelers: true,
                    payments: true,
                    invoices: true,
                    receipts: true,
                    backup: false,
                    whatsapp: false,
                    email: false,
                    frontpage: false,
                    reports: true,
                    users: false
                },
                staff: {
                    batches: false,
                    travelers: true,
                    payments: true,
                    invoices: false,
                    receipts: true,
                    backup: false,
                    whatsapp: false,
                    email: false,
                    frontpage: false,
                    reports: false,
                    users: false
                },
                viewer: {
                    batches: true,
                    travelers: true,
                    payments: false,
                    invoices: false,
                    receipts: true,
                    backup: false,
                    whatsapp: false,
                    email: false,
                    frontpage: false,
                    reports: true,
                    users: false
                }
            };
            
            userPermissions = rolePermissions[userRole] || rolePermissions.admin;
            
            // Load modules based on permissions
            loadModules();
            loadQuickActions();
        }

        function loadModules() {
            const modulesGrid = document.getElementById('modulesGrid');
            if (!modulesGrid) return;
            
            let html = '';
            
            modules.forEach(module => {
                if (userPermissions[module.id]) {
                    html += `
                        <a href="${module.page}" class="module-card">
                            <i class="fas ${module.icon}"></i>
                            <h4>${module.name}</h4>
                            <p>Manage ${module.name}</p>
                        </a>
                    `;
                }
            });
            
            modulesGrid.innerHTML = html || '<p class="text-muted">No modules available</p>';
        }

        function loadQuickActions() {
            const quickActions = document.getElementById('quickActions');
            if (!quickActions) return;
            
            let html = '';
            
            if (userPermissions.batches) {
                html += `<button class="action-btn btn-primary" onclick="window.location.href='batches.html'"><i class="fas fa-layer-group"></i> Batches</button>`;
            }
            if (userPermissions.travelers) {
                html += `<button class="action-btn btn-success" onclick="window.location.href='travelers.html'"><i class="fas fa-users"></i> Travelers</button>`;
            }
            if (userPermissions.payments) {
                html += `<button class="action-btn btn-warning" onclick="window.location.href='payments.html'"><i class="fas fa-credit-card"></i> Payments</button>`;
            }
            if (userPermissions.invoices) {
                html += `<button class="action-btn btn-info" onclick="window.location.href='invoices.html'"><i class="fas fa-file-invoice"></i> Invoices</button>`;
            }
            if (userPermissions.receipts) {
                html += `<button class="action-btn btn-secondary" onclick="window.location.href='receipts.html'"><i class="fas fa-receipt"></i> Receipts</button>`;
            }
            if (userPermissions.reports) {
                html += `<button class="action-btn btn-danger" onclick="window.location.href='reports.html'"><i class="fas fa-chart-bar"></i> Reports</button>`;
            }
            
            quickActions.innerHTML = html || '<p class="text-muted">No actions available</p>';
        }

        function togglePermissions() {
            const role = document.getElementById('role')?.value;
            const isAdmin = role === 'admin';
            
            document.querySelectorAll('#permissionGrid .perm-checkbox').forEach(cb => {
                if (cb.value !== 'users') {
                    cb.disabled = !isAdmin;
                    cb.checked = isAdmin;
                }
            });
        }

        function toggleEditPermissions() {
            const role = document.getElementById('edit_role')?.value;
            const isAdmin = role === 'admin';
            
            document.querySelectorAll('#editPermissionGrid .perm-checkbox').forEach(cb => {
                if (cb.value !== 'users') {
                    cb.disabled = !isAdmin;
                }
            });
        }

        // ==================== NOTIFICATION ====================
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            if (!notification) return;
            
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i> ${message}`;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // ==================== TAB NAVIGATION ====================
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            const tabEl = document.getElementById(tabName + 'Tab');
            if (tabEl) tabEl.classList.add('active');
            
            const tabButton = document.getElementById('tab' + tabName.charAt(0).toUpperCase() + tabName.slice(1));
            if (tabButton) tabButton.classList.add('active');
            
            if (tabName === 'dashboard') loadDashboardStats();
            if (tabName === 'batches') loadBatches();
            if (tabName === 'travelers') {
                loadTravelers();
                loadBatchDropdown();
            }
            if (tabName === 'payments') {
                loadPayments();
                loadTravelerDropdown();
            }
            if (tabName === 'users') loadUsers();
        }

        // ==================== FORM VISIBILITY ====================
        function showCreateBatchForm() {
            if (!userPermissions.batches) {
                showNotification('You do not have permission to create batches', 'error');
                return;
            }
