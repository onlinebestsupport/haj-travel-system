                default:
                    reportContent = `<h4>${type} Report - Coming Soon</h4>`;
            }
            
            reportOutput.innerHTML = `
                <div style="background: #f8f9fa; padding: 20px; border-radius: 5px;">
                    ${reportContent}
                    <button class="action-btn btn-primary" style="margin-top:20px;" onclick="window.print()">
                        <i class="fas fa-print"></i> Print Report
                    </button>
                </div>
            `;
            
            showNotification(`${type} report generated`, 'success');
        }

        // ==================== EXPORT FUNCTIONS ====================
        function exportToExcel(type) {
            showNotification(`Exporting ${type} to Excel...`, 'info');
            setTimeout(() => {
                showNotification(`${type} exported successfully`, 'success');
            }, 1500);
        }

        function printTable(type) {
            window.print();
        }

        // ==================== ROLE PERMISSIONS ====================
        function saveRolePermissions() {
            showNotification('Role permissions saved successfully!', 'success');
        }

        // ==================== LOGOUT ====================
        async function logout() {
            try {
                await fetch('/api/logout', { method: 'POST' });
            } catch (error) {}
            sessionStorage.clear();
            window.location.href = '/admin.login.html';
        }
    </script>
</body>
</html>
