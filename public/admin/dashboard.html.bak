        // ==================== DASHBOARD STATS ====================
        async function loadDashboardStats() {
            try {
                const response = await fetch('/api/admin/dashboard/stats');
                const data = await response.json();
                
                if (data.success) {
                    const setText = (id, value) => {
                        const el = document.getElementById(id);
                        if (el) el.textContent = value ?? '0';
                    };
                    const setHTML = (id, value) => {
                        const el = document.getElementById(id);
                        if (el) el.innerHTML = value ?? '₹0';
                    };

                    setText('totalTravelers', data.stats.total_travelers);
                    setText('activeBatches', data.stats.active_batches);
                    setHTML('totalCollected', '₹' + (data.stats.total_collected || 0).toLocaleString('en-IN'));
                    setHTML('pendingAmount', '₹' + (data.stats.pending_amount || 0).toLocaleString('en-IN'));
                    
                    let totalBookings = 0;
                    let totalSeats = 0;
                    
                    const batchesRes = await fetch('/api/batches');
                    const batchesData = await batchesRes.json();
                    
                    if (batchesData.success) {
                        batchesData.batches.forEach(b => {
                            totalBookings += b.booked_seats || 0;
                            totalSeats += b.total_seats || 0;
                        });
                        
                        setText('totalBookings', totalBookings);
                        const occupancyRate = totalSeats > 0 ? Math.round((totalBookings / totalSeats) * 100) : 0;
                        setText('occupancyRate', occupancyRate + '%');
                    }
                    
                    let activityHtml = '<ul style="list-style: none; padding: 0;">';
                    if (data.recent_activity && data.recent_activity.length > 0) {
                        data.recent_activity.forEach(item => {
                            activityHtml += `<li style="padding: 10px; border-bottom: 1px solid #ecf0f1;">
                                <i class="fas fa-${item.type === 'traveler' ? 'user-plus' : 'info-circle'}" style="color: #27ae60;"></i>
                                ${item.name || 'Activity'} - ${item.created_at ? new Date(item.created_at).toLocaleDateString() : 'Recently'}
                            </li>`;
                        });
                    } else {
                        activityHtml += '<li style="padding: 10px;">No recent activity</li>';
                    }
                    activityHtml += '</ul>';
                    
                    const recentEl = document.getElementById('recentActivity');
                    if (recentEl) recentEl.innerHTML = activityHtml;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
                useFallbackStats();
            }
        }

        function useFallbackStats() {
            const setText = (id, value) => {
                const el = document.getElementById(id);
                if (el) el.textContent = value;
            };
            const setHTML = (id, value) => {
                const el = document.getElementById(id);
                if (el) el.innerHTML = value;
            };

            setText('totalTravelers', '3');
            setText('activeBatches', '4');
            setHTML('totalCollected', '₹2,25,000');
            setHTML('pendingAmount', '₹25,000');
            setText('totalBookings', '3');
            setText('occupancyRate', '45%');
            
            const recentEl = document.getElementById('recentActivity');
            if (recentEl) {
                recentEl.innerHTML = `
                    <ul style="list-style: none; padding: 0;">
                        <li style="padding: 10px; border-bottom: 1px solid #ecf0f1;">
                            <i class="fas fa-user-plus" style="color: #27ae60;"></i> New traveler: Ahmed Khan
                        </li>
                        <li style="padding: 10px; border-bottom: 1px solid #ecf0f1;">
                            <i class="fas fa-credit-card" style="color: #f39c12;"></i> Payment: ₹85,000 received
